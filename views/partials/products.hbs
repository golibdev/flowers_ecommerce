<style>
    .card-body, .card-footer, .card-header {
        border: none !important;
        border: 1px solid #e84393 !important;
        border-radius: 10px !important;
        margin-bottom: 15px;
    }
    .btn-outline-danger {
        font-weight: 600 !important;
        border: 1px solid #e84393;
    }
    
</style>


<section class="products" id="products">
    {{#if products}}
    <div class="container w-100 alert alert-danger text-dark d-flex justify-content-center align-items-center text-uppercase">
        <h1 class="title">Oxirgi</h1>
        <h1 class="ml-2 title" style="color: #e84393;">mahsulotlar</h1>
    </div>
    <div class="row">
        {{#each products}}
            <div class="col-lg-4 col-md-6 col-12 mb-3">
                <div class="card p-3">
                    <div class="card-header text-danger bg-white text-center">
                        {{title}}
                    </div>
                    <div class="card-body">
                        <img src="{{image}}" class="img-fluid w-100 rounded" alt="{{title}}" style="height: 300px;">
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between">
                        <a class="btn btn-outline-danger" href="/product/{{_id}}">To'liq</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="text-center mt-4">
        <a href="/all/products" class="btn btn-outline-danger">Barcha mahsulotlar</a>
    </div>
    {{else}}
    <div class="alert alert-danger text-center">
        Mahsulotlar qo'shilmagan
    </div>
    {{/if}}
</section>

