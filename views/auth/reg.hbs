<style>
   .register {
      margin-top: 6rem;
   }
</style>

{{> navbar}}

<div class="container register mb-3">
   <div class="row">
      <div class="col-12">
         <div class="card p-3">
            {{#if regErr}}
               <div class="alert alert-danger">
                  {{regErr}}
               </div>
            {{/if}}
            <div class="card-header text-center bg-white">
               <h1>Ro'yxatdan o`tish</h1>
            </div>
            <div class="card-body">
               <form accept="/auth/register" method="POST">
                  <div class="form-group">
                     <label for="firstName">Ismingizni kiriting</label>
                     <input type="text" class="form-control" id="firstName" name="firstName"  placeholder="Ismingizni kiriting...">
                  </div>
                  <div class="form-group">
                     <label for="lastName">Familiyangizni kiriting</label>
                     <input type="text" class="form-control" id="lastName" name="lastName"  placeholder="Familiyangizni kiriting...">
                  </div>
                  <div class="form-group">
                     <label for="email">Elektron pochta</label>
                     <input type="email" class="form-control" id="email" name="email"  placeholder="Elektron pochta...">
                  </div>
                  <div class="form-group">
                     <label for="password">Parol kiriting</label>
                     <input type="password" class="form-control" id="pasword" placeholder="Parolni kiriting..." minlength="6" name="password">
                  </div>
                  <div class="form-group">
                     <label for="confirmPassword">Parolni qayta kiriting</label>
                     <input type="password" class="form-control" id="confirmPassword" placeholder="Parolni qayta kiriting.." name="confirmPassword" minlength="6">
                  </div>
                  <button type="submit" class="btn btn-primary">Ro`yxatdan o`tish</button>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>