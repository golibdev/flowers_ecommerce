{{> navbar}}
<style>
   .title {
      font-size: 20px !important;
   }

   .disabled {
      cursor: pointer;
      pointer-events: none;
   }
   .page-item {
      cursor: pointer;
   }

   @media (max-width: 400px) {
      .title {
         font-size: 1rem !important;
      }
   }
</style>

{{> navbar}}

<section class="products" id="products" style="margin-top: 4rem;">
   {{#if products}}
   <div class="w-100 text-dark d-flex justify-content-center align-items-center text-uppercase ">
      <h1 class="title">Barcha</h1>
      <h1 class="ml-2 title" style="color: #e84393;">mahsulotlar</h1>
   </div>
   <div class="row">
         {{#each products}}
               <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-3">
                  <div class="card">
                      <div class="card-header text-danger bg-white text-center">
                            {{title}}
                        </div>
                     <div class="card-body">
                        <img src="{{image}}"style="height: 220px;"  class="img-fluid rounded w-100" alt="">
                     </div>
                     <div class="card-footer bg-white">
                        <a class="btn btn-outline-danger d-block" href="/product/{{_id}}">To'liq</a>
                     </div>
                  </div>
               </div>
         {{/each}}
   </div>
   <nav>
      <ul class="pagination justify-content-center">
         {{#paginate pagination type="previous"}}
            <li {{#if disabled}}class="page-item disabled"{{/if}}><a href="?page={{n}}&limit=9" class="page-link">Prev</a></li>
         {{/paginate}}
         {{#paginate pagination type="middle"}}
            <li {{#if active}}class="page-item active"{{/if}}>
               <a href="?page={{n}}&limit=9" class="page-link  ">{{n}}</a>
            </li>
         {{/paginate}}
         {{#paginate pagination type="next"}}
            <li {{#if disabled}}class="page-item disabled"{{/if}}>
               <a href="?page={{n}}&limit=9" class="page-link">Next</a>
            </li>
         {{/paginate}}
      </ul>
   </nav>
   {{else}}
      <div class="alert alert-danger">
         Maxsulotlar qo'shilmagan
      </div>
{{/if}}
</section>